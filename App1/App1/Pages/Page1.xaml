                </DataTemplate>
            </HubSection>
            <HubSection Header="Tech" IsHeaderInteractive="True" Background="#222222" MinWidth="250" RequestedTheme="Dark" Height="100">
                <DataTemplate>
                    <!-- Content -->
                    <TextBlock Text="my content"></TextBlock>
                </DataTemplate>
            </HubSection>
            <HubSection Header="Thirt" MinWidth="200" Height="100">
                <DataTemplate>
                    <TextBlock Text="is there anything wrong?"/>
                </DataTemplate>
            </HubSection>
            <!-- More sections -->
            
        </Hub>

    </Grid>
</Page>
